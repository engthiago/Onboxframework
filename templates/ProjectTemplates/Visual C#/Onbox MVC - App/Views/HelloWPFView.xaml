<rmvc:RevitMvcViewBase x:Class="$safeprojectname$.Views.HelloWpfView"
					   DataContext="{Binding RelativeSource={RelativeSource Self}}"
					   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
					   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
					   xmlns:mvc="clr-namespace:Onbox.Mvc.V7;assembly=Onbox.Mvc"
					   xmlns:rmvc="clr-namespace:Onbox.Mvc.Revit.V7;assembly=Onbox.Mvc.Revit"
					   mc:Ignorable="d"
					   Title="Hello WPF View"
					   MinWidth="500"
					   MinHeight="450"
					   Width="500"
					   Height="450">

    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Hello, I am a Revit hosted View for:"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center" />
        <TextBlock Text="{Binding AppName}"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center" />
    </StackPanel>

</rmvc:RevitMvcViewBase>
